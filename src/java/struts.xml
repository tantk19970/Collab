<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    
    <package name="default" extends="struts-default">
        <result-types>
             <!-- Uses this, so root must point to the dto for serialization. -->
              <!-- No need to manually serialize in action using gson -->
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>
        <action name="LoginAction" class="tantk.actions.LoginAction" >
            <result name="error">error.jsp</result>
            <result name="admin">admin.jsp</result>
            <result name="user">user.jsp</result>
            <result name="input">index.jsp</result>
        </action>
        <action name="SearchAction" class="tantk.actions.SearchAction">
            <result name="success">admin.jsp</result>
        </action>
        <action name="CreateSubjectAction" class="tantk.actions.subject.CreateSubjectAction">
            <result name="success">admin.jsp</result>
        </action>
        <action name="GetAllSubjectAction" class="tantk.actions.subject.GetAllSubjectAction">
            <result name="success">admin.jsp</result>
        </action>
        <action name="GetPEAction" class="tantk.actions.pe.GetPEAction">
            <result name="success">admin.jsp</result>
        </action>
        <action name="GoToQuizPage">
            <result>quiz.jsp</result>
        </action>
        <action name="GetPEDetailsAction" class="tantk.actions.pe.GetPEDetailsAction">
            <result type="json" name="success">
                <!-- root must point to the dto -->
                <param name="root">peDetail</param>
            </result>
        </action>
    </package>
</struts>
